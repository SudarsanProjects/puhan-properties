<%- include('partials/header', { title: 'Contact Us | Puhan Properties' }) %>

<section class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>Get in touch with us for any property-related queries.</p>
    </div>
</section>

<section class="page-content">
    <div class="container contact-container">
        <div class="contact-form">
            <h2>Send us a Message</h2>
            <% if (locals.message) { %>
                <div class="form-message <%= message.includes('required') ? 'error' : 'success' %>">
                    <p><%= message %></p>
                </div>
            <% } %>
            <form action="/contact" method="POST">
                <div class="form-group">
                    <label for="name">Name <span>*</span></label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile Number <span>*</span></label>
                    <input type="tel" id="mobile" name="mobile" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Enquiry</button>
            </form>
        </div>
        <div class="contact-details">
            <h2>Contact Information</h2>
            <p><strong>Puhan Properties</strong></p>
            <p><strong>Address:</strong> Mayur Vihar Phase 1, Delhi, India</p>
            <p><strong>Phone:</strong> <a href="tel:+918658729842">+91-8658729842</a></p>
            <p><strong>Email:</strong> <a href="mailto:contact@puhanproperties.com">contact@puhanproperties.com</a></p>
            <p>We are available 7 days a week to assist you with your property needs.</p>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
